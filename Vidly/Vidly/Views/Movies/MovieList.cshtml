@model  Vidly.ViewModels.MovieListViewModel
@{
    ViewBag.Title = "MovieList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Movie List</h2> <hl></hl>


@if (Model.MovieList.Count <= 0)
{ <text>
    No movies in database. You are a bad movie store. </text>}

else
{ <ul>

    @foreach (var movie in Model.MovieList)
    {
    <li>@movie.Name</li>

    }
</ul>}


